                                 </HBox.margin>
                                          </Label>
                              <Label fx:id="NoOfStudent" alignment="CENTER" prefHeight="52.0" prefWidth="67.0" text="65" textFill="#8e44ad">
                                 <font>
                                    <Font name="System Bold" size="36.0" />
                                 </font>
                              </Label>
                           </children>
                                </HBox>
                            </children>
                        </VBox>
                    </HBox>

                    <!-- Payment History Section -->
                    <VBox prefHeight="235.0" prefWidth="1059.0" spacing="10">
                        <Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Payment History">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>

                        <TableView prefHeight="200" prefWidth="1100" stylesheets="@../style/tableViewStyle.css">
                            <columns>
                                <TableColumn prefWidth="150" text="DateTime" />
                                <TableColumn prefWidth="300" text="Remarks" />
                                <TableColumn prefWidth="150" text="Paid Amount" />
                                <TableColumn prefWidth="150" text="Balance" />
                                <TableColumn prefWidth="100" text="Action" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </VBox>
            </children>
        </Pane>
    </children>
