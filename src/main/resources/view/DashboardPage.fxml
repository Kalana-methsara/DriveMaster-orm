                        <Stop>
                           <color>
                              <Color red="0.2788742780685425" green="0.5526315569877625" blue="0.2879995107650757" />
                           </color>
                        </Stop>
                        <Stop offset="0.006711409395973154">
                           <color>
                              <Color red="0.13333334028720856" green="0.545098066329956" blue="0.13333334028720856" />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color red="0.5960784554481506" green="1.0" blue="0.5960784554481506" />
                           </color>
                        </Stop>
                     </stops>
                  </LinearGradient>
               </fill>
                </Rectangle>
                <!-- Main Content Container -->
                <VBox layoutX="30.0" layoutY="30.0" prefHeight="614.0" prefWidth="1125.0" spacing="20">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <!-- Buttons Section -->
                    <HBox spacing="500.0">
                        <VBox prefHeight="35.0" prefWidth="227.0">
                            <children>

                                <!-- Title -->
                                <Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Dashboard">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox prefHeight="54.0" prefWidth="235.0">
                            <children>
                                <HBox prefHeight="52.0" prefWidth="281.0" spacing="20" style="-fx-background-color: #23c323; -fx-border-color: white; -fx-background-radius: 10px; -fx-border-radius: 10px;">
                           <children>
                                          <Label style="-fx-font-weight: bold;" text="Total Students" textFill="WHITE">
                                              <font>
                                                  <Font size="18.0" />
                                              </font>
                                 <HBox.margin>
