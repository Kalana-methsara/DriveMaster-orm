<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.project.drivemaster.controller.StudentSearchController">

    <children>
        <!-- Table for Students -->
        <TableView fx:id="tblStudents" layoutX="30.0" layoutY="30.0" prefHeight="250.0" prefWidth="740.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="150" text="Student ID" />
                <TableColumn fx:id="colName" prefWidth="200" text="Name" />
                <TableColumn fx:id="colCourse" prefWidth="200" text="Course" />
                <TableColumn fx:id="colFee" prefWidth="150" text="Fee" />
            </columns>
        </TableView>
        <Label fx:id="lblTime" layoutX="998.0" layoutY="3.0" prefHeight="44.0" prefWidth="176.0" styleClass="timeLabel" text="Label" />


        <!-- Button to Select Student -->
        <Button fx:id="btnSelect" layoutX="650.0" layoutY="300.0" mnemonicParsing="false" onAction="#btnSelectOnAction" text="Select Student" />

        <!-- Student Details Section -->
        <Label layoutX="50.0" layoutY="360.0" text="Student ID:" />
        <TextField fx:id="txtId" editable="false" layoutX="150.0" layoutY="355.0" prefWidth="200.0" />

        <Label layoutX="50.0" layoutY="400.0" text="Name:" />
        <TextField fx:id="txtName" editable="false" layoutX="150.0" layoutY="395.0" prefWidth="200.0" />

        <Label layoutX="400.0" layoutY="360.0" text="Course:" />
        <TextField fx:id="txtCourse" editable="false" layoutX="480.0" layoutY="355.0" prefWidth="200.0" />

        <Label layoutX="400.0" layoutY="400.0" text="Fee:" />
        <TextField fx:id="txtFee" editable="false" layoutX="480.0" layoutY="395.0" prefWidth="200.0" />

    </children>
</AnchorPane>
